<h2>Please fill the form below: </h2>
<p>
  <%= render partial: "shared/errors", locals: {obj: comment} %>
  <%= form_for [post, comment] do |f| %>
    <p>
      <%= f.label :message, "Comment: " %>
      <%= f.text_area :message %>
    </p>
    <p>
      <%= f.label :character_id, "Character" %>
      <%= f.select :character_id, Character.pluck(:name, :id) %>
    </p>
    <p>
      <%= f.submit "Save" %>
      <%= link_to "Cancel", post %>
    </p>
  <% end %>
</p>