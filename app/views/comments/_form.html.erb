<h2>Please fill the form below: </h2>
<p>
  <%= render partial: "shared/errors", locals: {obj: comment} %>
  <%= form_for [post, comment] do |f| %>
  <div class="form-group">
      <%= f.label :message, "Comment: " %>
      <%= f.text_area :message , class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :character_id, "Character" %>
      <%= f.select :character_id, Character.pluck(:name, :id), {}, class: "form-control" %>
    </div>
    <div class="btn-group" role="group">
      <%= f.submit "Save",class: "btn btn-default" %>
      <%= link_to "Cancel", post,class: "btn btn-default" %>
    </div>

  <% end %>
</p>
