<h1>Memberships</h1>

<% if flash[:notice] %>
  <p style="background: yellow">
    <%= flash[:notice] %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <%= render @memberships %>
    <tr>
      <td><%= link_to "New Membership", new_membership_path %></td>
    </tr>
  </tbody>
</table>
