<h2>Please fill the form below: </h2>
<%= render partial: "shared/errors", locals: {obj: post} %>
<%= form_for(post) do |f| %>
<div class="form-group">
    <%= f.label :message, "Message" %>
    <%= f.text_area :message, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :scheduled_at, "Scheduled At: " %>
    <%= f.date_field :scheduled_at , class: "form-control", placeholder: "MM-DD-YYYY"%>
  </div>
  <div class="form-group">
    <%= f.label :location, "Location: " %>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :character_id, "Character" %>
  	<%= f.select :character_id, Character.pluck(:name, :id), {}, class: "form-control" %>
  </div>
  <div class="btn-group" role="group">
    <%= f.submit "Save" ,class: "btn btn-default"%>
    <%= link_to "Cancel", posts_path,class: "btn btn-default" %>
  </div>

<% end %>
