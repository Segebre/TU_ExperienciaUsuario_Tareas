<!DOCTYPE html>
<html>
<head>
  <title>SuperBook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">

    <div class="container-fluid">

      <div class="navbar-header">
        <!--<a class="navbar-brand" href="#">SUPERBOOK!!!</a>-->
      </div>

      <ul class="nav navbar-nav">
        <li>
          <%if current_user%>
            <span style="color: white"><%=current_user.name%></span>
            <%= link_to (image_tag current_user.avatar_url, :size => "30x30"), character_path %>
          <%end%>
        </li>
        <li>
					<%= link_to root_path do %>
						<span class="fa fa-home"></span>
						<p>Home</p>
					<% end %>
				</li>
        <%unless current_user %>
  				<li>
  					<%= link_to new_character_path do %>
  						<span class="fa-id-card"></span>
  						<p>Sign Up</p>
  					<% end %>
  				</li>
        <%end%>
        <li>
					<%= link_to posts_path do %>
						<span class="fa fa-book"></span>
						<p>View Posts</p>
					<% end %>
				</li>
        <%if current_user%>
          <%if current_user.email=="system@heroe.com"%>
    				<li>
    					<%= link_to memberships_path do %>
    						<span class="fa fa-sign-in"></span>
    						<p>Members</p>
    					<% end %>
    				</li>
          <%end%>
        <%end%>
        <%unless current_user%>
          <li>
            <%= link_to login_path do %>
              <span class="fa fa-sign-in"></span>
              <p>Log In</p>
            <% end %>
          </li>
        <%else%>
        <li>
          <%= link_to logout_path,data: {method: :delete} do %>
            <span class="fa fa-sign-out"></span>
            <p>Log Out</p>
          <% end %>
        </li>
        <%end%>
      </ul>

    </nav>
      <div class="container-fluid">

    		<%= yield %>

    		<hr>
    		<footer>
    			<p>
            Here to fight for
            <strong>
              justice!!
            </strong>, except for deadpool.
          </p>
    		</footer>
    	</div>
