<h2>Please fill the form below: </h2>
<%= render partial: "shared/errors", locals: {obj: character} %>
<%= form_for(character) do |f| %>
<div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Example Johnston" %>
  </div>
  <div class="form-group">
      <%= f.label :password, "Password: " %>
      <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirm: " %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :role, "Role: " %>
    <%= f.select :role, Character.roles, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :membership_id, "Membership" %>
    <%= f.select :membership_id, Membership.pluck(:name, :id), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email: " %>
    <%= f.email_field :email, class: "form-control", placeholder: "example@woot.com" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar_url, "Avatar URL: " %>
    <%= f.text_field :avatar_url , class: "form-control"%>
  </div>
  <div class="btn-group" role="group">
    <%= f.submit "Save",  class: "btn btn-default"%>
    <%= link_to "Delete", character, class: "btn btn-default", method: :delete, data: {confirm: "Are you sure you want to delete this Character?"} %>
    <%= link_to "Cancel", character, class: "btn btn-default" %>
  </div>
<% end %>
