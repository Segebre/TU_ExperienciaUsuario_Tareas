<% if flash[:notice] %>
  <p style="background: yellow">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1><%= @character.name %>'s posts</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Message</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts %>
    <tr>
      <td><%= link_to "New Post", new_post_path %></td>
    </tr>
  </tbody>
</table>