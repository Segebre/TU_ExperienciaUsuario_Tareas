<% if flash[:notice] %>
  <p style="background: yellow">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1><%= @character.name %>'s posts</h1>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Message</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts %>
    <tr>
      <div class="btn-group" role="group">
        <td><%= link_to "New Post", new_post_path,class: "btn btn-default" %></td>
      </div>
    </tr>
  </tbody>
</table>
