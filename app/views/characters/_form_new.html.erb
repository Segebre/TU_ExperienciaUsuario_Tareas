<h2>Please fill the form below: </h2>
<%= render partial: "shared/errors", locals: {obj: character} %>
<%= form_for(character) do |f| %>
<div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Su Nombre" %>

</div>
<div class="form-group">
    <%= f.label :role, "Role: " %>
    <%= f.select :role, Character.roles, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :membership_id, "Membership" %>
    <%= f.select :membership_id, Membership.pluck(:name, :id), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email: " %>
    <%= f.email_field :email, class: "form-control", placeholder: "example@woohoo.com" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar_url, "Avatar URL: " %>
    <%= f.text_field :avatar_url,class:"form-control" %>
  </div>
  <div class="btn-group" role="group">
    <%= f.submit "Save",class: "btn btn-default" %>
    <%= link_to "Cancel", root_path, class: "btn btn-default" %>
  </div>
<% end %>
