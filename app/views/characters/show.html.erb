<h1><%= @character.name %></h1>

<% if flash[:notice] %>
  <p style="background: yellow">
    <%= flash[:notice] %>
  </p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th></th>
      <th>Name</th>
      <th>Role</th>
      <th>Membership</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @character.id %></td>
      <td><%= link_to (image_tag @character.avatar_url, :size => "200x184"), @character.avatar_url %></td>
      <td><%= @character.name %></td>
      <td><%= @character.role %></td>
      <td><%= link_to @character.membership.try(:name), 'memberships/:id/characters' %></td>
      <td><%= @character.email %></td>
      <td><%= nice_date(@character.created_at) %></td>
      <td><%= nice_date(@character.updated_at) %></td>
    </tr>
  </tbody>
</table>
<div class="btn-group" role="group">
  <%= link_to "Edit", edit_character_path,class: "btn btn-default" %>
</div>
<div class="btn-group" role="group">
  <%= link_to "#{@character.name}'s Posts", character_posts_path,class: "btn btn-default" %>
</div>
